package Reverse_ll;
import java.util.*;


class Node{
	int data;
	Node next;
	public Node(int data) {
		this.data = data;
	}
}
public class Reverse_Linkedlist {
	static Node head = null;
	static Scanner sc = new Scanner(System.in);
	void Add(int data) {
		Node List = new Node(data);
		List.data = data;
		List.next = null;
		if(head == null) {
			head = List;
		}
		else {
			while(List!=null) {
			List = List.next;
		}
			
		}
	}
	void Display() {
		if(head == null)
			System.out.println("Invalid");
		else {
			Node List = head;
			System.out.println("Data : ");
			while(List!=null) {
				System.out.println(""+ List.data +"");
				List = List.next;
			}
		}
	}
	
	void reverse() {
		int count = 1;
		Node prev = null;
		Node List = head;
		while(List!=null) {
			List = List.next;
			count++;
		}
		System.out.print(count);
	}
	public static void main(String[]args) {
		Reverse_Linkedlist rl = new Reverse_Linkedlist();
		System.out.println("Enter data");
		int data = sc.nextInt();
		rl.Add(data);
		rl.Display();
	}
}
