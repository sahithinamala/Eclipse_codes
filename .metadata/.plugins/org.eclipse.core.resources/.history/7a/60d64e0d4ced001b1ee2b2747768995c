package Reverse_ll;
import java.util.*;


class Node{
	int data;
	Node next;
	public Node(int data) {
		this.data = data;
	}
}
public class Reverse_Linkedlist {
	static Node head = null;
	static Scanner sc = new Scanner(System.in);
	void Add(int data) {
		Node newNode = new Node(data);
		Node List = head;
		Node prev = null;
		newNode.data = data;
		newNode.next = null;
		if(head == null) {
			head = List;
		}
		else {
			while(List!=null) {
				prev = head;
			List = List.next;
			break;
		}
			if(List == null) {
				prev.next = newNode;
			}
			else if(prev == null) {
				head = newNode;
				newNode.next = List;
			}
			else {
				prev.next = newNode;
				newNode.next = List;
				
			}
			
			
		}
	}
	void Display() {
		if(head == null)
			System.out.println("Invalid");
		else {
			Node List = head;
			System.out.println("Data : ");
			while(List!=null) {
				System.out.println(""+ List.data +"");
				List = List.next;
			}
		}
	}
	
	void reverse() {
		int count = 1;
		Node prev = null;
		Node List = head;
		while(List!=null) {
			List = List.next;
			count++;
		}
		System.out.print(count);
	}
	public static void main(String[]args) {
		Reverse_Linkedlist rl = new Reverse_Linkedlist();
		
		for(int i = 0;i<10;i++) {
			System.out.println("Enter data");
			int data = sc.nextInt();
		rl.Add(data);
		rl.Display();
		}
	}
}
