package Linkedlist_pr;

import java.util.Scanner;

class Node{
	int data;
	Node next;
}

public class Sort_Linkedlist {
	static Node head = null;
	static Scanner sc = new Scanner(System.in);
	
	void Add(int data) {
		Node newNode = new Node();
		newNode.data = data;
		newNode.next = null;
		if(head == null) {
			head  = newNode;
		}
		else {
			Node prev = null;
			Node List = head;
			while((List!=null) && (List.data<newNode.data)) {
					prev = List;
					List = List.next;	
			}
			if(List == null) {
				prev.next = newNode;
				
			}
			else if(prev == null) {
				head = newNode;
				newNode.next = List;
			}
			else {
				prev.next = newNode;
				newNode.next = List;
				
			}
			
		}	
	
	}
	void Display() {
		if(head == null)
			System.out.println("Invalid");
		else {
			Node List = head;
			System.out.println("Data : ");
			while(List!=null) {
				System.out.println(""+ List.data +"");
				List = List.next;
			}
		}
	}
	boolean isExist(int data) {
		if(head == null)
			return false;
		else {
			Node List = head;
			while(List!=null) {
				if(List.data == data)
					return true;
				List = List.next;
			}
		}
		return false;
		
	}

	void Delete(int data) {
		Node prev = null;
		Node List = head;
		while(List!=null && data!=List.data) {
				prev= List;
				List = List.next;	
		}
		if(List == null) {
			System.out.println(" Data not found ");
		}
		else {
		if(data == List.data) {
			if(prev == null) {
				head = List.next;
			}
			else {
			prev.next = List.next;
			}
			
		}
		}
		
		
	}
	void nth_node(int n) {
		Node List = head;
		int count = 0;
		while(List!=null) {
			List = List.next;
			count++;
			break;
		}
		int total_nodes = count;
		int nth = total_nodes - (n-1);
		for(count = 0;count <=nth ;count ++) {
			List = List.next;
			
		}
		int d = List.data;
		System.out.println(d);
	}
	public static void main(String[]args) {
		Sort_Linkedlist sl = new Sort_Linkedlist();
		int ch;
		while(true)

		{
			
		System.out.println("Enter choice \n 1.Add \n 2.Delete \n 3.Display \n 4.nth node from last \n 5.Exit ");

		ch=sc.nextInt();
		switch(ch) {
		
		case 1: System.out.println("Data to be entered");
			int data = sc.nextInt();
			if(sl.isExist(data) == false) {
				sl.Add(data);
			break;
		}
		case 2: System.out.println("Data to be deleted");
				int data_d = sc.nextInt();
			sl.Delete(data_d);
				break;
		case 3: sl.Display();
				break;
		case 4:System.out.println("Data at nth node from end");
				int data_n = sc.nextInt();
				sl.nth_node(data_n);
		case 5:System.exit(0);
				break;
		default: System.out.println("Invalid choice");
				break;
		}
		
	
		
	}

}
}