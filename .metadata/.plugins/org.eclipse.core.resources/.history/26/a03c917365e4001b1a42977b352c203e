package ab;
import java.util.*;
public class Sum_of_natural_numbers {
	static int sumnaturalnum(int n) {
		int num = n;
		int sum = 0;
		for(int i =num; i>=1; i--) {
			sum = sum + i;
			
		}
		return sum;
		
	}
	public static void main(String[]args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		System.out.println(sumnaturalnum(n));
	}

}
