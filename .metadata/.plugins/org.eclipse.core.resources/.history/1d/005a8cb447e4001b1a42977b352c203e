package ab;

import java.util.*;

public class Check_sum_of_2_primes {
	
	
	public static void main(String[]args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int m = n/2;
		
		for(int i = 2; i<=m ; i++) {
			
			for(int x = 1;x<=n; x++) {
				
				for(int y = 1; y<=n;y++) {
					
					if(y%i!=0 && x%i!=0 && n==x+y) {
						System.out.println(n + "=" + x + "+" + y);
					}
				}
				
			}
			
			
			
			
		}
		
	}
		
}
		
	


